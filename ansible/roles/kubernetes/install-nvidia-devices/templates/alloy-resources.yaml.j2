apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: alloy-access
  namespace: dcgm-exporter
  labels:
    infra.haondt.dev/managed-by: ansible
spec:
  podSelector: {}
  policyTypes:
    - Ingress
  ingress:
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: {{ kubernetes.alloy.namespace }}
      ports:
        - port: 9400
          protocol: TCP
